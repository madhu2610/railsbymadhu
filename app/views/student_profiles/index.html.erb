<p id="notice"><%= notice %></p>

<p class="head-col pt-3 pb-3">Student Marks</p>


<table class="table table-striped table-borderless table-hover" style="background: #ffffff">
  <thead class="table-dark">
    <tr>
      <th>Mark1</th>
      <th>Mark2</th>
      <th>Mark3</th>
      <th>Total</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_profiles.each do |student_profile| %>
      <tr>
        <td><%= student_profile.mark1 %></td>
        <td><%= student_profile.mark2 %></td>
        <td><%= student_profile.mark3 %></td>
        <td><%= student_profile.total %></td>
        <td><%= student_profile.student.first_name %></td>
        <td><%= link_to 'Show', student_profile, {:class=>"text-primary"} %></td>
        <td><%= link_to 'Edit', edit_student_profile_path(student_profile),{:class=>"text-primary"} %></td>
        <td><%= link_to 'Destroy', student_profile, :class=>"text-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Mark', new_student_profile_path, {:class=> "btn btn-dark text-light m-3"} %>
