<p id="notice"><%= notice %></p>

<p class="head-col pt-3 pb-3">Students</p>

<table class="table table-striped table-borderless table-hover" style="background: #ffffff">
<thead class="table-dark">
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Age</th>
      <th>Roll</th>
      <th>Email</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Image</th>
      <th>Mark1 </th>
      <th>Mark2</th>
      <th>Mark3</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td class=""><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.age %></td>
        <td><%= student.roll_no %></td>
        <td><%= student.email %></td>
        <td><%= student.address %></td>
        <td><%= student.mobile %></td>
        <td><%= image_tag(student.image_url.to_s, :class => "img_preview") %></td>
        <% if student.student_profile %>
        <td><%= student.student_profile.mark1 %></td>
        <td><%= student.student_profile.mark2%></td>
        <td><%= student.student_profile.mark3 %></td>
        <td><%= student.student_profile.total %></td>
        <%else%>
        <td>-- </td>
        <td>--</td>
        <td>--</td>
        <td>--</td>
        <%end%>

        <td><%= link_to 'Show', student, {:class=>"text-primary"} %></td>
        <td><%= link_to 'Edit', edit_student_path(student),{:class=>"text-primary"} %></td>
        <td><%= link_to 'Destroy', student, :class=>"text-primary", method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path , {:class=> "btn btn-dark text-light m-3"}%>
