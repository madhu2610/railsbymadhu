<div class="form-body">
<div class="row">
    <div class="form-holder">
        <div class="form-content">
            <div class="form-items">
                <%= form_with(model: student) do |form| %>
                  <% if student.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
                    </div>
                  <% end %>
                    <div class="col-md-12">
                        <%= form.text_field :first_name, placeholder: "first name",:class=>"form-control" %>
                        <div class="text-danger-color"><%= student.errors.full_messages_for(:first_name).join(' and ') %>
                        </div>
                    </div>

                    <div class="col-md-12">
                    <%= form.text_field :last_name, placeholder: "last name",:class=>"form-control" %>
                    <div class="text-danger-color"><%= student.errors.full_messages_for(:last_name).join(' and ') %>
                   </div>
                   </div>


                   <div class="col-md-12">
                    <%= form.number_field :age, placeholder: "Age",:class=>"form-control" %>
                    <div class="text-danger-color"><%= student.errors.full_messages_for(:age).join(' and ') %>
                   </div>
                   </div>

                   <div class="col-md-12">
                    <%= form.number_field :roll_no, placeholder: "roll No",:class=>"form-control" %>
                    <div class="text-danger-color"><%= student.errors.full_messages_for(:roll_no).join(' and ') %>
                   </div>
                   </div>
                   
                   <div class="col-md-12">
                    <%= form.text_field :email, placeholder: "email ",:class=>"form-control" %>
                    <div class="text-danger-color"><%= student.errors.full_messages_for(:email ).join(' and ') %>
                   </div>
                   </div>

                   <div class="col-md-12">
                   <%= form.text_field :address, placeholder: "address ",:class=>"form-control" %>
                   <div class="text-danger-color"><%= student.errors.full_messages_for(:address ).join(' and ') %>
                  </div>
                  </div>

                  <div class="col-md-12">
                  <%= form.number_field :mobile, placeholder: "mobile ",:class=>"form-control" %>
                  <div class="text-danger-color"><%= student.errors.full_messages_for(:mobile ).join(' and ') %>
                 </div>
                 </div>

                 <div class="col-md-12">
                 <%= form.file_field :image, placeholder: "Profile image ",:class=>"form-control" %>
                 <div class="text-danger-color"><%= student.errors.full_messages_for(:image ).join(' and ') %>
                </div>
                </div>

                <div class="form-button mt-3 text-center">
                 
                 <%= form.submit 'create student', :class => "btn bg-primary text-light"%>
                </div>
                <%end%>
            </div>
        </div>
    </div>
</div>
</div>